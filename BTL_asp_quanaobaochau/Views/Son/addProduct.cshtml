
@{
    ViewBag.Title = "addProduct";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Thêm sản phẩm</h2>
<div class="row ">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <form action="/Son/addProduct" method="post" enctype="multipart/form-data">
          
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label>Tên sản phẩm<span style="color:red;font-size:10px" >@ViewData["tensp"]</span> </label>
                    <input type="text" name="TenSanPham" class="form-control" id="inputAddress"  placeholder="">
                </div>
                <div class="form-group col-md-6">
                    <label>Mô tả <span style="color:red;font-size:10px">@ViewData["mota"]</span></label>
                    <input type="text" name="MoTa" class="form-control" id="inputAddress" placeholder="">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label>Giá <span style="color:red;font-size:10px">@ViewData["gia"]</span></label>
                    <input type="number" name="Gia" class="form-control" id="inputAddress" placeholder="">
                </div>
                <div class="form-group col-md-6">
                    <label>Số lượng <span style="color:red;font-size:10px">@ViewData["soluong"]</span></label>
                    <input type="number" name="SoLuongCon" class="form-control" id="inputAddress" placeholder="">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label>Xuất xứ <span style="color:red;font-size:10px">@ViewData["xuatxu"]</span></label>
                    <input type="text" name="XuatXu" class="form-control" id="inputAddress" placeholder="">
                </div>
                <div class="form-group col-md-6">
                    <label>Hãng <span style="color:red;font-size:10px">@ViewData["hang"]</span></label>
                    <input type="text" name="Hang" class="form-control" id="inputAddress" placeholder="">
                </div>
            </div>
            <div class="form-row">

                <div class="form-group col-md-6">
                    <label>Loại sản phẩm</label>
                    <select style="padding:5px;" name="MaLoaiSanPham">
                        @foreach (var item in Model)
                        {
                            <option value="@item.MaLoai">@item.TenLoai</option>
                        }

                    </select>
                </div>
                <div class="form-group">
                    <label>Chọn ảnh<span style="color:red;font-size:10px">@ViewData["anh"]</span> </label>
                    <input type="file" name="file" id="file" />
                </div>
            </div>
            
            <button type="submit" class="btn btn-primary">Thêm sản phẩm</button>
            <button type="button" class="btn btn-outline-danger">@Html.ActionLink("Quay lại", "Index")</button>
        </form>
    </div>
    <div class="col-md-3"></div>
</div>


